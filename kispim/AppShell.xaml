<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="kispim.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:kispim.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="kispim">
    
    <TabBar>
        <Tab 
            Title="Main Page"
            Icon="home_page_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" />
        </Tab>
        
        <Tab 
            Title="Transactions"
            Icon="transactions_list_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:TransactionsListPage}" />
        </Tab>
    </TabBar>
    
</Shell>
